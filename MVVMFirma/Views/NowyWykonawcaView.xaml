<UserControl x:Class="MVVMFirma.Views.NowyWykonawcaView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MVVMFirma.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <!-- TŁO CAŁEGO WIDOKU -->
    <Grid>

        <!-- Gradient  -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                <GradientStop Color="#0b0517" Offset="0.0"/>
                <!-- najciemniejszy u góry -->
                <GradientStop Color="#231a45" Offset="0.25"/>
                <GradientStop Color="#2f3e7d" Offset="0.5"/>
                <GradientStop Color="#4674a6" Offset="0.75"/>
                <GradientStop Color="#72cee8" Offset="1.0"/>
                <!-- najjaśniejszy na dole -->
            </LinearGradientBrush>
        </Grid.Background>

        <!-- ✅ FORMULARZ ODSUNIĘTY O ~2 CM -->
        <Grid Margin="75,75,0,0">

            <!-- KOLUMNY -->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250" />
                <!-- etykiety -->
                <ColumnDefinition Width="250" />
                <!-- pola -->
                <ColumnDefinition Width="200" />
                <!-- etykiety prawe -->
                <ColumnDefinition Width="158" />
                <!-- pola prawe -->
            </Grid.ColumnDefinitions>

            <!-- WIERSZE -->
            <Grid.RowDefinitions>
                <RowDefinition Height="45"/>
                <!-- nr wykonawcy -->
                <RowDefinition Height="45"/>
                <!-- nazwa + NIP -->
                <RowDefinition Height="45"/>
                <!-- telefon + kraj -->
                <RowDefinition Height="45"/>
                <!-- miasto + kod pocztowy -->
                <RowDefinition Height="45"/>
                <!-- ulica + nr domu -->
                <RowDefinition Height="45"/>
            </Grid.RowDefinitions>

            <!-- NUMER WYKONAWCY -->
            <Label Grid.Column="0" Grid.Row="0"
                   Content="Nadaj numer wykonawcy:"
                   Foreground="White"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Center"
                   Margin="0,8,10,8"/>
            <TextBox Grid.Column="1" Grid.Row="0"
                     Background="White"
                     Margin="0,8"/>

            <!-- NAZWA WYKONAWCY -->
            <Label Grid.Column="0" Grid.Row="1"
                   Content="Nazwa wykonawcy:"
                   Foreground="White"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Center"
                   Margin="0,8,10,8"/>
            <TextBox Grid.Column="1" Grid.Row="1"
                     Background="White"
                     Margin="0,8"/>

            <!-- NIP -->
            <Label Grid.Column="2" Grid.Row="1"
                   Content="NIP:"
                   Foreground="White"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Center"
                   Margin="0,8,10,8"/>
            <TextBox Grid.Column="3" Grid.Row="1"
                     Background="White"
                     Margin="0,8"
                     Width="150"/>

            <!-- TELEFON -->
            <Label Grid.Column="2" Grid.Row="2"
                   Content="Telefon:"
                   Foreground="White"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Center"
                   Margin="0,8,10,8"/>
            <TextBox Grid.Column="3" Grid.Row="2"
                     Background="White"
                     Margin="0,8"
                     Width="150"/>

            <!-- KRAJ -->
            <Label Grid.Column="0" Grid.Row="2"
                   Content="Kraj:"
                   Foreground="White"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Center"
                   Margin="0,8,10,8"/>
            <TextBox Grid.Column="1" Grid.Row="2"
                     Background="White"
                     Margin="0,8"/>

            <!-- MIASTO -->
            <Label Grid.Column="0" Grid.Row="3"
                   Content="Miasto:"
                   Foreground="White"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Center"
                   Margin="0,8,10,8"/>
            <TextBox Grid.Column="1" Grid.Row="3"
                     Background="White"
                     Margin="0,8"/>

            <!-- KOD POCZTOWY -->
            <Label Grid.Column="2" Grid.Row="3"
                   Content="Kod pocztowy:"
                   Foreground="White"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Center"
                   Margin="0,8,10,8"/>
            <TextBox Grid.Column="3" Grid.Row="3"
                     Background="White"
                     Margin="0,8"
                     Width="100"/>

            <!-- ULICA -->
            <Label Grid.Column="0" Grid.Row="4"
                   Content="Ulica:"
                   Foreground="White"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Center"
                   Margin="0,8,10,8"/>
            <TextBox Grid.Column="1" Grid.Row="4"
                     Background="White"
                     Margin="0,8"/>

            <!-- NR DOMU -->
            <Label Grid.Column="2" Grid.Row="4"
                   Content="Nr domu:"
                   Foreground="White"
                   HorizontalAlignment="Right"
                   VerticalAlignment="Center"
                   Margin="0,8,10,8"/>
            <TextBox Grid.Column="3" Grid.Row="4"
                     Background="White"
                     Margin="0,8"
                     Width="80"/>

        </Grid>
    </Grid>
</UserControl>
