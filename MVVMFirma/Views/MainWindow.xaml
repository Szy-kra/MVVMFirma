<Window x:Class="MVVMFirma.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MVVMFirma" 
        MinHeight="768" MinWidth="1024" 
        WindowState="Maximized"
        xmlns:vm="clr-namespace:MVVMFirma.ViewModels"
        xmlns:vw="clr-namespace:MVVMFirma.Views">

    <Window.Resources>
        <ResourceDictionary Source="MainWindowResources.xaml" />
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>

        <Menu Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" Margin="2">
            <MenuItem Header="_Plik"/>
            <MenuItem Header="_Magazyn">
                <MenuItem Header="Wszystkie towary"/>
                <MenuItem Header="Nowy towar"/>
                <MenuItem Header="Wydanie Zewnętrzne (WZ)"/>
                <MenuItem Header="Przyjęcie Zewnętrzne (PZ)"/>
            </MenuItem>
            <MenuItem Header="Program"/>
        </Menu>

        <ToolBar Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" Margin="2">
            <ToggleButton Width="32" Height="32" Background="Blue" Margin="2"/>
            <ToggleButton Width="32" Height="32" Background="Yellow" Margin="2"/>
        </ToolBar>

        <Border Grid.Row="2" Grid.Column="0" CornerRadius="6" Margin="5">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#0b0517" Offset="0.1"/>
                    <GradientStop Color="#231a45" Offset="0.3"/>
                    <GradientStop Color="#2f3e7d" Offset="0.5"/>
                    <GradientStop Color="#4674a6" Offset="0.7"/>
                    <GradientStop Color="#72cee8" Offset="1.1"/>
                </LinearGradientBrush>
            </Border.Background>

            <HeaderedContentControl 
                Header="MENU"
                Content="{Binding Commands}" 
                ContentTemplate="{StaticResource CommandsTemplate}"
                Style="{StaticResource MainHCCStyle}"
                Foreground="White"
                Padding="10" />
        </Border>

        <Border Grid.Row="2" Grid.Column="1" CornerRadius="6" Margin="5">
            <HeaderedContentControl 
                Header="Przestrzeń robocza"
                Style="{StaticResource MainHCCStyle}"
                Padding="10">
                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                    <ContentControl 
                        Content="{Binding Workspaces}"
                        ContentTemplate="{StaticResource WorkspacesTemplate}" />
                </ScrollViewer>
            </HeaderedContentControl>
        </Border>

        <StatusBar Grid.Column="0" Grid.Row="3" Grid.ColumnSpan="2">
            <StatusBarItem>
                <TextBlock>Szymon Krajewski</TextBlock>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <TextBlock>Advantalife</TextBlock>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>