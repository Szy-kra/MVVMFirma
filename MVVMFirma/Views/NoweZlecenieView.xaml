<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:av="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="av" x:Class="MVVMFirma.Views.NoweZlecenieView"
             Background="White" av:DesignWidth="779.898">
    <ScrollViewer>
        <Grid Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150" />
                <ColumnDefinition Width="300" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="45"/>
                <RowDefinition Height="45"/>
                <RowDefinition Height="45"/>
                <RowDefinition Height="45"/>
                <RowDefinition Height="60"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Label Grid.Row="0" Content="Wykonawca:" HorizontalAlignment="Right" VerticalAlignment="Center"/>
            <ComboBox Grid.Column="1" Grid.Row="0" Margin="5" 
                      ItemsSource="{Binding ListaWykonawcow}" 
                      SelectedValue="{Binding IdWykonawcy}" 
                      DisplayMemberPath="NazwaWykonawcy" SelectedValuePath="Id"/>

            <Label Grid.Row="1" Content="Nr Zlecenia:" HorizontalAlignment="Right" VerticalAlignment="Center"/>
            <TextBox Grid.Column="1" Grid.Row="1" Margin="5" Text="{Binding NrZlecenia}" VerticalContentAlignment="Center"/>

            <Label Grid.Row="2" Content="Indeks (Towar):" HorizontalAlignment="Right" VerticalAlignment="Center"/>
            <ComboBox Grid.Column="1" Grid.Row="2" Margin="5" 
                      ItemsSource="{Binding ListaIndeksow}" 
                      SelectedItem="{Binding WybranyIndeks}" 
                      DisplayMemberPath="KodIndeksu"/>

            <Label Grid.Row="3" Content="Ilość zlecona:" HorizontalAlignment="Right" VerticalAlignment="Center"/>
            <TextBox Grid.Column="1" Grid.Row="3" Margin="5" Text="{Binding Ilosc}" VerticalContentAlignment="Center"/>

            <Button Grid.Row="4" Grid.Column="1" Content="Zapisz Zlecenie" 
                    Command="{Binding SaveCommand}" Margin="5" Height="35" Width="150" HorizontalAlignment="Left"/>

            <Separator Grid.Row="5" Grid.ColumnSpan="2" Margin="0,15"/>
            <TextBlock Grid.Row="5" Grid.ColumnSpan="2" Text="SZCZEGÓŁY TECHNICZNE I FORMA" 
                       FontWeight="Bold" Foreground="Blue" HorizontalAlignment="Center" Margin="0,10"/>

            <StackPanel Grid.Row="6" Grid.ColumnSpan="2" Margin="10,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Forma:" FontWeight="SemiBold"/>
                        <TextBlock Text="{Binding WybranyIndeks.Formy.Nazwa}" FontSize="14"/>
                    </StackPanel>
                    <StackPanel Grid.Column="1">
                        <TextBlock Text="Wstawki:" FontWeight="SemiBold"/>
                        <TextBlock Text="{Binding WybranyIndeks.Wstawki.Nazwa}" FontSize="14"/>
                    </StackPanel>
                    <StackPanel Grid.Column="2">
                        <TextBlock Text="Tryb pracy:" FontWeight="SemiBold"/>
                        <TextBlock Text="{Binding WybranyIndeks.Opis}" FontSize="14"/>
                    </StackPanel>
                </Grid>
            </StackPanel>

            <GroupBox Grid.Row="7" Grid.ColumnSpan="2" Header="Skład produktu (BOM)" Margin="0,15,0,0">
                <DataGrid ItemsSource="{Binding WybranyIndeks.IndeksBOM}" 
                          AutoGenerateColumns="False" IsReadOnly="True" Height="150" Background="White">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Kod Materiału" Binding="{Binding Materialy.KodMaterialu}" Width="100"/>
                        <DataGridTextColumn Header="Nazwa Materiału" Binding="{Binding Materialy.Nazwa}" Width="*"/>
                        <DataGridTextColumn Header="Ilość/Szt" Binding="{Binding IloscNaSztuke}" Width="80"/>
                        <DataGridTextColumn Header="Jm" Binding="{Binding Materialy.Jednostki.Nazwa}" Width="50"/>
                    </DataGrid.Columns>
                </DataGrid>
            </GroupBox>
        </Grid>
    </ScrollViewer>
</UserControl>